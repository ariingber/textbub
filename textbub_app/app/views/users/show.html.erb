  <div class="row">
    <div class="six columns col_one_title">
      <h5><%= @user.name%>'s Info</h5>
      <%= image_tag(@user.image(:medium), size: "150x150", class: "img-responsive") %>
      <p>Handle: <%= @user.handle%></p>
      <p>Business Name: <%= @user.business_name%></p>
      <p>Service Provided: <%= @user.service_provided%></p>
      <p>About: <%= @user.about_me%></p>
      <p>Email: <%= @user.email%></p>
    </div>
    <div class="six columns col_one_title">
      <h5>Reviews of <%= @user.name%> </h5>

      <% @reviews.each do |review| %>

        <% if review.handle ==  @user.handle %>
        <p>* <%= review.content %></p>
        <% end %>
        <% end %>
      </div>
    <div class="three columns col_one_title">


    </div>

</div>

<div class="row">
  <div class="twelve columns col_one_title">
    <% if session[:current_user_id] %>
      <button><%= link_to "Delete", user_path(@user), method: :delete %></button>
      <button><%= link_to "Edit", edit_user_path(@user)  %></button>
    <% end %>
  </div>
</div>
