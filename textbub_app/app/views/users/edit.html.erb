<h5>Edit Your Profile </h5>
<div class="edit user">
    <% if session[:current_user_id] %>
      <div class="form">
        <%= form_for @user do |f| %>
          <%= f.label :about_me %>
          <%= f.text_field :about_me%><br>
          <%= f.label :password %>
          <%= f.password_field :password %><br>
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation %><br>
          <br>
          <%= f.submit "Submit" %> <br>
        <% end %>
      </div>
    <% else %>
    <% end %>
  </div>
