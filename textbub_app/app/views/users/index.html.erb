<div class="login">
    <% if session[:current_user_id] %>
      <h1>Welcome Back</h1>
      <%= link_to "#{User.find(session[:current_user_id]).name}",
        user_path(session[:current_user_id]) %> ||
      <%= link_to "Logout", sessions_path, method: :delete %>
    <% else %>
      <%= form_tag(sessions_path) do%>
        <%= label_tag :name %>
        <%= text_field_tag :name %>
        <br>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
        <br><br>
        <%= submit_tag "Login"%>
      <% end %>
    <% end %>
  </div>
