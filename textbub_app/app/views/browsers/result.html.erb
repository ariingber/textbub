
  <% @results.each do |result| %>
  <div class="row">
    <div class="six columns col_one_title">
        <h5>Search Results</h5>
        <%= image_tag(result.image(:medium), size: "150x150", class: "img-responsive") %>
        <p>
          Name: <%= result.name %> </p>
        <p>
          Handle: <%= result.handle %>
        </p>
        <p>
          Business Name: <%= result.business_name %>
        </p>
        <p>
          Service Provided: <%= result.service_provided %>
        </p>
        <p>
          City: <%= result.city %> </p>
        <p>
          Zip: <%= result.zipcode %>
        </p>
        <p>
          Email: <%= result.email %>
        </p>
    </div>
    <div class="six columns col_one_title">
      <h5>Reviews of <%= result.name %></h5>
      <% @reviews.each do |review| %>
        <% if review.handle ==  result.handle %>
          <div>
            <p>* <%= review.content %></p>
          </div>
          <% end %>
      <% end %>
    </div>
  </div>



<% end %>
