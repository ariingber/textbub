
  <% @results.each do |result| %>
  <div class="row">
    <div class="four columns col_one_title">
        <h5>Search Result</h5>
        <%= image_tag(result.image(:medium), size: "150x150", class: "img-responsive") %>
        <p>
          Name: <%= result.name %> </p>
        <p>
          Handle: <%= result.handle %>
        </p>
        <p>
          Business Name: <%= result.business_name %>
        </p>
        <p>
          Service Provided: <%= result.service_provided %>
        </p>
        <p>About:</p>
        <p> <%= result.about_me %> </p>
        <p>
          City: <%= result.city %> </p>
        <p>
          Zip: <%= result.zipcode %>
        </p>
        <p>
          Email: <%= result.email %>
        </p>
        <p>
          Link to Profile:
          <br>
          <a href=<%="https://textbub.herokuapp.com/users/" + result.id.to_s%>><%="https://textbub.herokuapp.com/users/" + result.id.to_s%></a>
        </p><br><br>
    </div>
    <div class="four columns col_one_title">
      <h5>Reviews of <%= result.name %></h5>
      <div class="scroll" style="height:375px;width:427px;border:1px solid #ccc;font:16px/26px; overflow:auto;">
      <% @reviews.each do |review| %>
        <% if review.handle ==  result.handle %>
          <div>
            <p> <%= review.content %></p>
          </div>
          <% end %>
      <% end %>
    </div>
    </div>
  </div>
<% end %>
