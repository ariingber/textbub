<!DOCTYPE html>
<html>
<head>
  <title>TextBub</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <h1>TextBub <i class="fa fa-mobile"></i> </h1>
    <div class="row">
      <div class="twelve columns">
        <ul class="nav">
          <% if session[:current_user_id] %>
            <li><button>
              <%= link_to "Logout", sessions_path, method: :delete %>
            </button></li>
            <button><%= link_to "#{User.find(session[:current_user_id]).handle}'s profile",
              user_path(session[:current_user_id]) %></button>
          <% else %>
            <li><button>
              <%= link_to "Sign Up", new_user_path %>
            </button></li>
            <li><button>
              <%= link_to "Log In", users_path %>
            </button></li>
          <% end %>
          <li><button>
            <%= link_to "Search", new_browser_path %>
          </button></li>
        </ul>
      </div>
    </div>

<%= yield %>

</body>
</html>
